extends layout

block content
 .container
  .row
   .col-md-6.offset-md-3.col-sm-12
     h1.text-center TheChat
      button#clear.btn.btn-danger Clear
     br
     #chat
       #status
       .card#message-container
        each message, i in messages
         #message-block
          .username #{message.username}:
          .message #{message.message}
         #messages.card-block
       br
       input#username.form-control(type='text', placeholder='Enter name...')
       br
       textarea#textarea.form-control(placeholder='Enter message...')